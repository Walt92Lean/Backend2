<h1>Carrito de Compras</h1>

    {{#if cart.products.length}}
        <ul>
            {{#each cart.products}}
                <li>
                    <strong>{{product.title}}</strong> - ${{product.price}}  
                    (Cantidad: {{quantity}})
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>El carrito está vacío.</p>
    {{/if}}

    <a href="/">Volver a la tienda</a>